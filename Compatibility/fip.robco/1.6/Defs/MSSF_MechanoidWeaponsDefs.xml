<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="LightMechanoidGunRanged">
    <defName>MSSF_Gun_Blobbyfier</defName>
    <label>the blobbyfier</label>
    <description>A compact, short-range blobbyfication device designed to be mounted on a blobbytron.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/MiniShotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>3000</MarketValue>
      <Mass>1.5</Mass>
      <AccuracyTouch>0.94</AccuracyTouch>
      <AccuracyShort>0.99</AccuracyShort>
      <AccuracyMedium>0.9</AccuracyMedium>
      <AccuracyLong>0.6</AccuracyLong>
      <RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
      <MechEnergyLossPerHP>0.00</MechEnergyLossPerHP>
    </statBases>
    <weaponTags>
      <li>MSSF_MechanoidGunBlobby</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>MSSF_Bullet_Blobby</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>15.9</range>
        <burstShotCount>1</burstShotCount>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>MSSF_Blobber_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>6</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>

  
  <ThingDef ParentName="BaseBullet">
    <defName>MSSF_Bullet_Blobby</defName>
    <label>blobby blast</label>
	<thingClass>Projectile_Liquid</thingClass>
    <graphicData>
      <texPath>Things/MSSF_Bullet_Blobby</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>MSSF_Bullet_Blobby</damageDef>
      <damageAmountBase>14</damageAmountBase>
      <stoppingPower>3</stoppingPower>
      <armorPenetrationBase>0.15</armorPenetrationBase>
      <speed>35</speed>
	  <filth>Filth_BlobbyGun</filth>
      <filthCount>1</filthCount>
    </projectile>
  </ThingDef>

  
  <DamageDef Name="Bullet">
    <defName>MSSF_Bullet_Blobby</defName>
    <label>blobby blast</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been blobbied to death.</deathMessage>
    <hediff>MSSF_Blob</hediff>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Toxic</impactSoundType>
    <armorCategory>Heat</armorCategory>
    <overkillPctToDestroyPart>0~0.7</overkillPctToDestroyPart>
    <isRanged>true</isRanged>
    <makesAnimalsFlee>true</makesAnimalsFlee>
  </DamageDef>

  
  <HediffDef ParentName="InjuryBase">
    <defName>MSSF_Blob</defName>
    <label>blobbed</label>
    <labelNoun>a blobby burn</labelNoun>
    <description>A blobby burn.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>sanitized</labelTendedWell>
        <labelTendedWellInner>sanitized</labelTendedWellInner>
        <labelSolidTendedWell>sanitized</labelSolidTendedWell>
      </li>
      <li Class="HediffCompProperties_Infecter">
        <infectionChance>0.15</infectionChance>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <permanentLabel>old blobby burn</permanentLabel>
        <instantlyPermanentLabel>permanent blobby injury</instantlyPermanentLabel>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.0125</painPerSeverity>
      <averagePainPerSeverityPermanent>0.00625</averagePainPerSeverityPermanent>
      <bleedRate>0.08</bleedRate>
      <canMerge>false</canMerge>
      <destroyedLabel>Blobbed off</destroyedLabel>
      <destroyedOutLabel>Blobbed out</destroyedOutLabel>
    </injuryProps>
  </HediffDef>
  
  <ThingDef ParentName="Filth_BloodInsect">
    <defName>Filth_BlobbyGun</defName>
    <label>blobber discharge</label>
    <graphicData>
      <texPath>Things/Filth/Spatter</texPath>
      <color>(248, 191, 242, 180)</color>
    </graphicData>
  </ThingDef>
  
  <SoundDef>
    <defName>MSSF_Blobber_Fire</defName>
    <context>MapOnly</context>
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Folder">
            <clipFolderPath>MSSF_BlobbyGun/Fire</clipFolderPath>
          </li>
        </grains>
        <volumeRange>30~35</volumeRange>
        <pitchRange>0.9311764~1.068824</pitchRange>
        <distRange>0~70</distRange>
        <sustainLoop>False</sustainLoop>
      </li>
    </subSounds>
  </SoundDef>
</Defs>