<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Possible overkill - FIP replaces the entire def, so instead, we restore the original with the FIP changes integrated -->
	<!-- Mech_Warqueen ThingDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Mech_Warqueen"]</xpath>
		<value>
			<ThingDef Name="MechWarqueen" ParentName="SuperHeavyMechanoid">
				<defName>Mech_Warqueen</defName>
				<label>Sheepsquatch</label>
				<description>This is a Sheepsquatch. Well, not really, but if you squint your eyes it may look like the real one.</description>
				<statBases>
				<MoveSpeed>4.5</MoveSpeed>
				<EnergyShieldRechargeRate>0.5</EnergyShieldRechargeRate>
				<EnergyShieldEnergyMax>3</EnergyShieldEnergyMax>
				<MeleeDoorDamageFactor>1.5</MeleeDoorDamageFactor>
				<EMPResistance>0.7</EMPResistance>
				</statBases>
				<race>
					<body>Assaultron</body>
					<lifeStageAges>
						<li>
							<def>MechanoidFullyFormed</def>
							<minAge>0</minAge>
							<soundWounded>Assaultron_Wounded</soundWounded>
							<soundDeath>Assaultron_Death</soundDeath>
							<soundCall>Assaultron_Call</soundCall>
							<soundAngry>Assaultron_Angry</soundAngry>
						</li>
					</lifeStageAges>
					<baseHealthScale>4</baseHealthScale>
				</race>
				<comps>
					<li Class="CompProperties_TargetingBeam" />
				</comps>
				<killedLeavingsPlayerHostile>
					<PowerfocusChip>1</PowerfocusChip>
				</killedLeavingsPlayerHostile>
			</ThingDef>
		</value>
	</Operation>
	<!-- Mech_Warqueen PawnKindDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/PawnKindDef[defName="Mech_Warqueen"]</xpath>
		<value>
			<PawnKindDef ParentName="LightMechanoidKind">
				<defName>Mech_Warqueen</defName>
				<label>Sheepsquatch</label>
				<race>Mech_Warqueen</race>
				<combatPower>500</combatPower>
				<isBoss>true</isBoss>
				<allowInMechClusters>false</allowInMechClusters>
				<lifeStages>
					<li>
						<bodyGraphicData>
							<texPath>RobCo/AssaultronBoss/AssaultronBoss</texPath>
							<shaderType>CutoutWithOverlay</shaderType>
							<graphicClass>Graphic_Multi</graphicClass>
							<drawSize>1.25</drawSize>
							<shadowData>
								<volume>(0.3, 0.4, 0.3)</volume>
								<offset>(0,0,-0.25)</offset>
							</shadowData>
						</bodyGraphicData>
					</li>
				</lifeStages>
				<weaponMoney>9999~9999</weaponMoney>
				<weaponTags>
					<li>HellsphereCannonGun</li>
				</weaponTags>
				<techHediffsChance>1</techHediffsChance>
				<techHediffsMoney>9999~9999</techHediffsMoney>
				<skipResistant>true</skipResistant>
			</PawnKindDef>
		</value>
	</Operation>
	<Operation Class="PatchOperationRemove">
		<xpath>/Defs/RecipeDef[defName="Warqueen"]</xpath>
	</Operation>
</Patch>