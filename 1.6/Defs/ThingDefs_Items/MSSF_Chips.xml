<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <ThingDef ParentName="ResourceBase">
        <defName>MSSF_PlatinumChipReal</defName>
        <label>The Platinum Chip</label>
        <description>A hyper-advanced computer chip disguised as a simple chip. Capable of storing an extraordinary amount of data, in the hands of a skilled mechanitor this chip could be utilised as a powerful robotic upgrade.</description>
        <thingClass>ThingWithComps</thingClass>
        <graphicData>
            <texPath>Things/Item/Chips/PlatinumChip/PlatinumChip</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <resourceReadoutPriority>Middle</resourceReadoutPriority>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Metal_Drop</soundDrop>
        <stackLimit>1</stackLimit>
        <useHitPoints>true</useHitPoints>
        <statBases>
            <MarketValue>6500</MarketValue>
            <MaxHitPoints>100</MaxHitPoints>
            <Mass>0.2</Mass>
            <Flammability>0.0</Flammability>
        </statBases>
        <thingCategories>
            <li>ItemsMisc</li>
        </thingCategories>
        <comps>
            <li Class="MSSFP.Comps.CompProperties_GameConditionOnUse">
                <label>Use The Platinum Chip</label>
                <description>Use The Platinum Chip on a mech to activate the broad-band synchronisation to unlock enhancements.</description>
                <iconPath>Things/Item/Chips/PlatinumChip/PlatinumChip</iconPath>
                <condition>MSSF_EnhancedMechs</condition>
                
                <consumeOnUse>true</consumeOnUse>
                <canTargetAnimals>false</canTargetAnimals>
                <canTargetMechs>true</canTargetMechs>
                <canTargetHumans>false</canTargetHumans>
                <canTargetSubhumans>false</canTargetSubhumans>
                <canTargetEntities>false</canTargetEntities>
                <canTargetBloodfeeders>false</canTargetBloodfeeders>
                <mustTargetPlayerFaction>true</mustTargetPlayerFaction>
            </li>
        </comps>
        <drawGUIOverlay>false</drawGUIOverlay>
        <tradeability>Sellable</tradeability>
        <techLevel>Ultra</techLevel>
        <tradeTags>
            <li>ExoticMisc</li>
        </tradeTags>
    </ThingDef>

