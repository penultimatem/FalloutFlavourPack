<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MechanitorHeadsetBase">
    <defName>MSSF_MechHat1</defName>
    <label>Postboy Hat</label>
    <description>A combined uniform hat and head-mounted comms computer which slightly enhances a robiticist's control bandwidth. This allows them to control more robots.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/T1_PostboyHat/PostboyHat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <Apparel_AuthorityCap>1</Apparel_AuthorityCap>
      <Apparel_AirwireHeadset>1</Apparel_AirwireHeadset>
    </costList>
    <recipeMaker>
      <researchPrerequisite>HighMechtech</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>0.18</Mass>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MechBandwidth>4</MechBandwidth>
    </equippedStatOffsets>
    <apparel>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/T1_PostboyHat/PostboyHat</wornGraphicPath>
      <renderSkipFlags>
        <li>None</li>
      </renderSkipFlags>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <scoreOffset>4</scoreOffset>
      <mechanitorApparel>true</mechanitorApparel>
    </apparel>
  </ThingDef>

