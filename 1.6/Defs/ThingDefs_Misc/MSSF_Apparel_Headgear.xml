  <ThingDef ParentName="ApparelArmorHelmetMechanitorBase">
    <defName>MSSF_MechHat3</defName>
    <label>Postmaster General Helmet</label>
    <description>An combined uniform hat, comms computer, intelligent signaling array, and finally, a advanced head-mounted computer and signaling array that dramatically enhances a roboticists's control bandwidth. This allows the wearer to control many more robots at once.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/T3_PostmasterHelmet/PostmasterHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.6</drawSize>
    </graphicData>
    <equippedStatOffsets>
      <MechBandwidth>16</MechBandwidth>
      <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0</VacuumResistance>
    </equippedStatOffsets>
    <statBases>
      <WorkToMake>4800</WorkToMake>
      <MaxHitPoints>425</MaxHitPoints>
      <Mass>0.70</Mass>
      <EquipDelay>2</EquipDelay>
      <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.3</ArmorRating_Blunt>
      <ArmorRating_Heat>0.3</ArmorRating_Heat>
      <Insulation_Cold>0.15</Insulation_Cold>
      <Insulation_Heat>0.15</Insulation_Heat>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>HighMechtech</researchPrerequisite>
      <skillRequirements>
        <Crafting>15</Crafting>
      </skillRequirements>
      <displayPriority>510</displayPriority>
    </recipeMaker>
    <costList>
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>75</Plasteel>
      <PowerfocusChip>1</PowerfocusChip>
      <MSSF_MechHat2>1</MSSF_MechHat2>
      <Apparel_IntegratorHeadset>1</Apparel_IntegratorHeadset>
    </costList>
    <apparel>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/T3_PostmasterHelmet/PostmasterHelmet</wornGraphicPath>
      <renderSkipFlags>
        <li>None</li>
      </renderSkipFlags>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups Inherit="False">
        <li>UpperHead</li>
      </bodyPartGroups>
    </apparel>
  </ThingDef>

</Defs>